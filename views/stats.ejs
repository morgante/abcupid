<% layout('layout') -%>
<h1>Stats <span class="badge"><%= total %></span></h1>

<div class="stats templates">
<% templates.forEach( function( template ) { %>
	<div class="template">
		<h2><%= template.name %><span class="badge"><%= template.tries %></span></h2>
		<h3><%= Math.floor(template.rate * 100) %> Â± <%= template.confidence %>%</h3>
		<p><%= template.text %></p>
		<ul class="replies">
		<% template.replies.forEach(function(reply) { %>
			<li><%= reply.body %></li>
		<% }) %>
		</ul>
<% }) %>
</div>